static void MOTOR_CTL_Handler(uint8 size,uint8 *data)
{
	uint8 *result,for_cnt,*p_temp;
//	NPI_WriteTransport(data, size);
	if(osal_memcmp("motor", data, 5));
	{
//		NPI_WriteTransport("motor", 5);
		data=data+5;
		p_temp=data;
		for(;p_temp!=data+size-5;p_temp++)                       //test if data is valid
			{
				NPI_WriteTransport(p_temp, 1);
				if(*p_temp<0x30||*p_temp>0x39)
					{
						NPI_WriteTransport("why?", 4);
						return;
					}
				else
					*p_temp-=0x30;
			}
		uint8 motor=0,mode,strength,duty,period_Num;
		uint16 cycle_time;
		p_temp=data;
//		NPI_WriteTransport("1", 1);
		while(*p_temp)                                            //there is one "0" after motor numbers 
			{
				switch(*p_temp)
					{
						case 1:
							motor|=HAL_MOTOR_1;
							p_temp+=1;
							break;
						case 2:
							motor|=HAL_MOTOR_2;
							p_temp+=1;
							break;	
						case 3:
							motor|=HAL_MOTOR_3;
							p_temp+=1;
							break;
						case 4:
							motor|=HAL_MOTOR_4;
							p_temp+=1;
							break;
					}

						
			}
		p_temp+=1;                                                               //pointer point to the next number of '0'
		switch(*p_temp)
			{
				case 0:
					mode=HAL_MOTOR_MODE_OFF;
					HalMotorSet(motor,  mode, 0, 0, 0, 0);
					return;
				case 1:
					mode=HAL_MOTOR_MODE_ON;
					HalMotorSet(motor,  mode, 0, 0, 0, 0);
					NPI_WriteTransport("1", 1);
					return;
				case 2:
					mode=HAL_MOTOR_MODE_TOGGLE;
					HalMotorSet(motor,  mode, 0, 0, 0, 0);
					return;
				case 3:
					mode=HAL_MOTOR_MODE_BLINK;
					p_temp+=1;                                                 //cycle time setting
					cycle_time=*p_temp*10000;
					p_temp+=1;
					cycle_time+=(*p_temp*1000);
					p_temp+=1;
					strength=*p_temp;
					p_temp+=1;
					duty=*p_temp*10;
					p_temp+=1;
					period_Num=*p_temp;
					HalMotorSet(motor, mode, strength, cycle_time, duty, period_Num);
					break;
			}
	}
	return;
}
